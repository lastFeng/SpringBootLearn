<?xml version="1.0" encoding="utf8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.chapter6.dao.UserDao">
	<select id="getUserById" paramType="long" resultType="user">
		select id, user_name as userName, note from t_user where id=#{id}
	</select>
	
	<insert id="insertUser" useGeneratedKey="true", keyProperty="id">
		insert into t_user(user_name, note) values (#{userName}, #{note})
	</insert>
</mapper>