<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3.0-mapper.dtd">
<mapper namespace="com.springboot.redis.cache.dao.UserDao">

	<resultMap id="userList" class="com.springboot.redis.cache.pojo.User">
		<result colomn=id property=id />
		<result colomn=user_name property=userName />
		<result colomn=note property=note />
	</resultMap>
	<select id="getUserById" parameterType="long" resultType="user">
		select id, user_name as userName, note from t_user
			where id=#{id}
	</select>
	
	<insert id="inserUser" useGeneratedKey=true keyProperty="id" parameterType="user">
		insert into t_user(user_name, note) values(#{userName}, #{note})
	</insert>
	
	<update id="updateUser">
		update t_user
			<set>
				<if test="userName != null"> user_name=#{userName},</if>
				<if test="note != null"> note=#{note}</if>
			</set>
			where id=#{id}
	</update>
	
	<select id="findUserListByUserNameAndnote" resultMap="userList">
		select id, user_name as userName, note from t_user
			<where>
				<if test="userName != null"> user_name=#{userName} </if>
				<if test="note != null"> note=#{note} </if>
			</where>
	</select>
	
	<delete id="deleteUserById" parameterType="long">
		delete from t_user where id=#{id}
	</delete>
</mapper>